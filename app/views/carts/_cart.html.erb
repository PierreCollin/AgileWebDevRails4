<h2>Your Cart</h2>
<table>
  <%= render cart.line_items %>
  <tr  class="total_line">
    <td colspan=2>Total</td>
    <% if cart.line_items.empty? %>
      <td class="empty_total_cell"> 
    <% else %>
      <td class="total_cell"> 
    <% end %>
      <%= formatted_price cart.total_price %>
    </td>
  </tr>
</table>
<%= button_to 'Empty cart', cart, method: :delete, 
  data: {confirm: 'Are you sure ?'} %>